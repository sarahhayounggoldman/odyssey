<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Followers</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/
        ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <h1>Welcome!</h1>
    <h2>Here is a list of all of your followers</h2>
    
    <div>
        <% if (followers.length > 0) { %>
            <% followers.forEach(follower => { %>
                <p><a href="/user/<%= follower %>">@<%= follower %></a></p>
            <% }); %>
        <% } else { %>
            <p>No followers yet.</p>
        <% } %>
    </div>

    <%- include("partials/bottombar.ejs") %>


    <footer class="footer">
        <p>Copyright Â© The Odyssey Team 2024 all rights reserved.</p>
    </footer>

    <!-- load local js -->
    <script src="/main.js"></script>
</body>
</html>
