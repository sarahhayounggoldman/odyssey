<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Profile</title>
    <!-- Load local stylesheet -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- Loading jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <%- include("partials/flashes.ejs") %>

    <h1>My Profile</h1>
    <div id="profile-pic">
    <% if (user.profilePic) { %>
        <img src="/uploads/<%= user.profilePic %>" alt="Profile Picture">
    <% } else { %>
        <img src="/path/to/default/image.png" alt="Default Profile Picture">
    <% } %>
    </div>
    <h2>@<%= username %></h2>
    <p><%= bio %></p>
    <p><%= followers %> Followers</p>
    <p><%= following %> Following</p>

    <a href="/editprofile">Edit Profile</a>
    <p>
        <form action="/logout" method="POST">
            <button class="profile-button">Logout</button>
        </form>
    </p>

    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <%- include('post', { post: post, username: username }) %> <!-- Pass the username to post template -->
        <% }); %>
    <% } else { %>
        <p>No posts yet.</p>
    <% } %>

    <%- include("partials/bottombar.ejs") %>

    <footer class="footer">
        <p>Copyright Â© The Odyssey Team 2024 all rights reserved.</p>
    </footer>

    <!-- Load local JavaScript -->
    <script src="/main.js"></script>
</body>
</html>
